<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Transition
        android:id="@+id/hide_bars_transition"
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start"
        app:duration="@android:integer/config_longAnimTime">
        <KeyFrameSet>
            <KeyAttribute
                android:translationY="0dp"
                app:framePosition="0"
                app:motionTarget="@id/bottomNav" />

            <KeyAttribute
                android:translationX="-300dp"
                app:framePosition="100"
                app:motionTarget="@id/navigationDrawer" />

            <KeyAttribute
                android:translationX="-300dp"
                app:framePosition="0"
                app:motionTarget="@id/navigationDrawer" />

            <KeyAttribute
                android:alpha="1"
                android:translationY="0dp"
                app:framePosition="50"
                app:motionTarget="@id/bottomNav" />
            <KeyAttribute
                android:alpha="0"
                android:translationY="75dp"
                app:framePosition="100"
                app:motionTarget="@id/bottomNav" />


            <KeyAttribute
                android:alpha="1"
                android:rotation="-90"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:translationX="0dp"
                app:framePosition="50"
                app:motionTarget="@id/menuDrawerIcon"
                app:transitionEasing="decelerate" />

            <KeyAttribute
                android:alpha="1"
                android:rotation="-90"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:translationX="0dp"
                app:framePosition="50"
                app:motionTarget="@id/settingsIcon"
                app:transitionEasing="decelerate" />


            <KeyAttribute
                android:alpha="0"
                android:rotation="-90"
                android:translationX="-40dp"
                app:framePosition="100"
                app:motionTarget="@id/menuDrawerIcon" />

            <KeyAttribute
                android:alpha="0"
                android:rotation="-90"
                android:translationX="40dp"
                app:framePosition="100"
                app:motionTarget="@id/settingsIcon" />

            <KeyAttribute
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:translationY="0dp"
                app:framePosition="80"
                app:motionTarget="@id/search_icon" />

            <KeyAttribute
                android:alpha="1"
                android:scaleX="1"
                android:scaleY="1"
                android:translationX="0dp"
                app:framePosition="0"
                app:motionTarget="@id/nav_host_container" />
            <KeyAttribute
                android:scaleX="1"
                android:scaleY="1"
                android:translationY="-50dp"
                app:framePosition="100"
                app:motionTarget="@id/search_icon" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/nav_host_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />
        <Constraint android:id="@id/settingsIcon">
            <PropertySet app:visibilityMode="ignore"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/nav_host_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" />
        <Constraint android:id="@id/settingsIcon">
            <PropertySet app:visibilityMode="ignore"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/show_drawer">
        <Constraint android:id="@id/settingsIcon">
            <PropertySet app:visibilityMode="ignore"/>
        </Constraint>
    </ConstraintSet>

    <Transition
        android:id="@+id/drawer_transition"
        app:constraintSetEnd="@id/show_drawer"
        app:constraintSetStart="@id/start"
        app:motionInterpolator="easeInOut"
        app:duration="@android:integer/config_mediumAnimTime">
        <OnClick
            app:clickAction="toggle"
            app:targetId="@id/menuDrawerIcon" />
        <KeyFrameSet>
            <KeyAttribute
                android:translationX="-300dp"
                app:framePosition="0"
                android:elevation="10dp"
                app:motionTarget="@id/navigationDrawer" />


            <KeyAttribute
                android:rotationY="-5"
                app:framePosition="50"
                android:elevation="6dp"
                app:motionTarget="@id/navigationDrawer" />


            <KeyAttribute
                android:rotationY="2"
                android:translationX="0dp"
                app:framePosition="100"
                android:elevation="3dp"
                app:motionTarget="@id/navigationDrawer" />

            <KeyAttribute
                android:elevation="2dp"
                android:scaleX="1.0"
                android:scaleY="1.0"
                android:translationX="0dp"
                app:framePosition="0"
                app:motionTarget="@id/settingsIcon" />

            <KeyAttribute
                android:elevation="2dp"
                android:scaleX="1.0"
                android:scaleY="1.0"
                android:translationX="0dp"
                app:framePosition="0"
                app:motionTarget="@id/search_icon" />

            <KeyAttribute
                android:elevation="2dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                app:framePosition="60"
                app:motionTarget="@id/settingsIcon" />

            <KeyAttribute
                android:elevation="2dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                app:framePosition="60"
                app:motionTarget="@id/search_icon" />


            <KeyAttribute
                android:elevation="30dp"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:translationX="-70dp"
                android:translationY="50dp"
                app:framePosition="100"
                app:motionTarget="@id/settingsIcon" />

            <KeyAttribute
                android:elevation="30dp"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:translationX="-30dp"
                android:translationY="120dp"
                app:framePosition="100"
                app:motionTarget="@id/search_icon" />

            <KeyAttribute
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:translationX="260dp"
                app:framePosition="100"
                app:motionTarget="@id/nav_host_container" />

            <KeyAttribute
                android:alpha="0"
                app:framePosition="15"
                app:motionTarget="@id/menuDrawerIcon" />

            <KeyAttribute
                android:alpha="0"
                android:scaleX="1"
                android:scaleY="1"
                android:translationY="0dp"
                android:translationX="-50dp"
                app:framePosition="80"
                app:motionTarget="@id/menuDrawerIcon" />

            <KeyAttribute
                android:alpha="1"
                android:scaleX="1.3"
                android:scaleY="1.3"
                android:translationY="10dp"
                android:translationX="0dp"
                app:framePosition="100"
                app:motionTarget="@id/menuDrawerIcon" />
            <KeyCycle
                android:rotation="80"
                app:framePosition="50"
                app:wavePeriod="0.1"
                app:motionTarget="@id/search_icon"
                app:waveShape="sin" />

            <KeyCycle
                android:rotation="0"
                app:framePosition="100"
                app:wavePeriod="0.1"
                app:motionTarget="@id/search_icon"
                app:waveShape="sin" />

        </KeyFrameSet>
    </Transition>

</MotionScene>