<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start">
        <OnSwipe app:touchRegionId="@id/player_fragment" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/player_fragment"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </Constraint>
        <Constraint
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:visibilityMode="ignore"/>

        <Constraint
            android:id="@+id/settingsIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/menuDrawerIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/menuDrawerIcon"
            app:visibilityMode="ignore"/>

        <Constraint
            android:id="@+id/menuDrawerIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toTopOf="@+id/toolBarGuideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityMode="ignore"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/player_fragment"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@id/bottomNav"
            app:layout_constraintRight_toRightOf="parent" />

        <Constraint
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:visibilityMode="ignore"/>

        <Constraint
            android:id="@+id/settingsIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/menuDrawerIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/menuDrawerIcon"
            app:visibilityMode="ignore"/>

        <Constraint
            android:id="@+id/menuDrawerIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toTopOf="@+id/toolBarGuideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityMode="ignore"/>
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/slide"
        app:constraintSetStart="@id/end">
        <OnSwipe
            app:dragDirection="dragRight"
            app:touchAnchorSide="bottom"
            app:touchRegionId="@id/player_fragment" />
    </Transition>
    <ConstraintSet android:id="@+id/slide">
        <Constraint
            android:id="@+id/player_fragment"
            android:layout_width="180dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toTopOf="@id/bottomNav"
            app:layout_constraintStart_toEndOf="parent"
            android:layout_marginBottom="8dp">
            <CustomAttribute
                app:attributeName="visibility"
                app:customIntegerValue="0"/>
        </Constraint>

        <Constraint
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:visibilityMode="ignore"/>

        <Constraint
            android:id="@+id/settingsIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/menuDrawerIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/menuDrawerIcon"
            app:visibilityMode="ignore"/>

        <Constraint
            android:id="@+id/menuDrawerIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toTopOf="@+id/toolBarGuideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityMode="ignore"/>
    </ConstraintSet>

</MotionScene>