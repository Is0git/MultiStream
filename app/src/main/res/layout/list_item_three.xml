<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.multistreamaterialplaceholdercard.PlaceHolderMaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="2dp"
        app:addGradient="false"
        app:placeHolderType="stream_place_holder"
        app:cardCornerRadius="0dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/streamerProfileBanner"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:alpha="1"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/view3"
                app:layout_constraintStart_toStartOf="@+id/view3"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/list_three_gradient" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/streamerBanner"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/cs_go"
                app:civ_border_width="4dp"
                app:civ_border_color="@color/colorSurface"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/streamerName"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:singleLine="true"
                android:background="@color/colorSurface"
                android:text="Shroud"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/streamerBanner" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.example.multistreamaterialplaceholdercard.PlaceHolderMaterialCardView>
</layout>