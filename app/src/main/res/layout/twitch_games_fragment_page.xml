<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/top_categories_bg"
            android:id="@+id/bgImage"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="0dp"
            android:alpha="0.2"
            android:layout_height="0dp"
            android:background="@drawable/darken_gradient"
            app:layout_constraintTop_toTopOf="@id/bgImage"
            app:layout_constraintBottom_toBottomOf="@id/bgImage"
            app:layout_constraintStart_toStartOf="@id/bgImage"
            app:layout_constraintEnd_toEndOf="@id/bgImage"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/topCategories"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/quicksand"
            android:text="TOP CATAGORIES"
            android:shadowColor="#94000000"
            android:shadowDy="5"
            android:shadowRadius="4"
            android:textStyle="bold"
            android:textColor="@color/colorSurface"
            app:layout_constraintEnd_toEndOf="@id/searchIcon"
            app:layout_constraintEnd_toStartOf="@+id/searchIcon"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/topTwitchGamesList"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="15sp"
            android:background="@drawable/search_icon"
            app:layout_constraintBottom_toBottomOf="@id/topCategories"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/topCategories"
            app:layout_constraintTop_toTopOf="@id/topCategories" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/topTwitchGamesList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="300dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topCategories"
            app:spanCount="7"
            tools:listitem="@layout/twitch_top_games_list" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>