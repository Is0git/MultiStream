<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/channelsViewPager"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="@dimen/actionBarMargin"
            android:background="@drawable/darken_gradient"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            app:layout_constraintTop_toTopOf="parent" />

        <com.android.multistream.ui.widgets.PlaceHolderMaterialCardView
            android:id="@+id/asdasd"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="@dimen/defaultCardCornerRadius"
            app:cardElevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/channelsViewPager">

            <View
                android:id="@+id/viewId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/main_background_gradient" />
        </com.android.multistream.ui.widgets.PlaceHolderMaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>