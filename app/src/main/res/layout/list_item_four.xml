<?xml version="1.0" encoding="utf-8"?>
<layout>

    <com.example.multistreamaterialplaceholdercard.PlaceHolderMaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="170dp"
        android:layout_height="230dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="2dp"
        android:background="?colorSurface"
        app:addGradient="false"
        app:cardBackgroundColor="?colorSurface"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/gameBanner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.example.multistreamaterialplaceholdercard.PlaceHolderMaterialCardView>
</layout>