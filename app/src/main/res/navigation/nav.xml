<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.android.multistream.ui.splash_screen.SplashScreenFragment"
        android:label="SplashScreenFragment">

        <action
            android:id="@+id/action_splashScreenFragment_to_intro"
            app:destination="@id/intro"
            app:launchSingleTop="true"
            app:popUpTo="@id/splashScreenFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashScreenFragment_to_main"
            app:destination="@id/main"
            app:launchSingleTop="true"
            app:popUpTo="@id/splashScreenFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <navigation
        android:id="@+id/main"
        app:startDestination="@id/homeFragment">
        <fragment
            android:id="@+id/homeFragment"
            android:name="com.android.multistream.ui.main.fragments.home_fragment.HomeFragment"
            android:label="HomeFragment">
            <action
                android:id="@+id/action_homeFragment_to_profileFragment"
                app:destination="@id/profileFragment" />
            <action
                android:id="@+id/action_homeFragment_to_twitchGameCategory"
                app:destination="@id/twitchGameCategory" />
            <action
                android:id="@+id/action_homeFragment_to_mixerGameCategory"
                app:destination="@id/mixerGameCategory" />
            <action
                android:id="@+id/action_homeFragment_to_twitchProfileFragment"
                app:destination="@id/twitchProfileFragment">
                <argument
                    android:name="channel"
                    android:defaultValue="@null"
                    app:argType="com.android.multistream.network.twitch.models.v5.followed_streams.Channel"
                    app:nullable="true" />
            </action>
            <action
                android:id="@+id/action_homeFragment_to_mixerProfileFragment"
                app:destination="@id/mixerProfileFragment">
                <argument
                    android:name="mixerChannel"
                    android:defaultValue="@null"
                    app:argType="com.android.multistream.network.mixer.models.mixer_channels.MixerGameChannel"
                    app:nullable="true" />
            </action>
        </fragment>
        <fragment
            android:id="@+id/browseFragment"
            android:name="com.android.multistream.ui.main.fragments.browse_fragment.BrowseFragment"
            android:label="BrowseFragment">

            <argument
                android:name="mixerGame"
                android:defaultValue="@null"
                app:argType="com.android.multistream.network.mixer.models.top_games.MixerTopGames"
                app:nullable="true" />
            <action
                android:id="@+id/action_browseFragment_to_mixerGameCategory"
                app:destination="@id/mixerGameCategory">

            </action>
            <action
                android:id="@+id/action_browseFragment_to_twitchGameCategory"
                app:destination="@id/twitchGameCategory">
                <argument
                    android:name="twitchGame"
                    android:defaultValue="@null"
                    app:argType="com.android.multistream.network.twitch.models.v5.top_games.TopItem"
                    app:nullable="true" />
            </action>
        </fragment>
        <action
            android:id="@+id/action_global_settingsFragment"
            app:destination="@id/settingsFragment"
            app:enterAnim="@anim/right_to_left_enter_anim"
            app:exitAnim="@anim/right_to_left_exit_anim"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/right_to_left_pop_enter_anim"
            app:popExitAnim="@anim/right_to_left_pop_exit_anim" />
        <fragment
            android:id="@+id/searchFragment"
            android:name="com.android.multistream.ui.main.fragments.search_fragment.SearchFragment"
            android:label="SearchFragment" />
        <fragment
            android:id="@+id/profileFragment"
            android:name="com.android.multistream.ui.main.fragments.profile_fragment.ProfileFragment"
            android:label="ProfileFragment" />
        <fragment
            android:id="@+id/twitchGameCategory"
            android:name="com.android.multistream.ui.main.fragments.game_category_fragment.twitch_game_category.TwitchGameCategory"
            android:label="TwitchGameCategory">
            <argument
                android:name="twitchGame"
                android:defaultValue="@null"
                app:argType="com.android.multistream.network.twitch.models.v5.top_games.TopItem"
                app:nullable="true" />
        </fragment>
        <fragment
            android:id="@+id/mixerGameCategory"
            android:name="com.android.multistream.ui.main.fragments.game_category_fragment.mixer_game_category.MixerGameCategory"
            android:label="MixerGameCategory">
            <argument
                android:name="mixerGame"
                android:defaultValue="@null"
                app:argType="com.android.multistream.network.mixer.models.top_games.MixerTopGames"
                app:nullable="true" />
        </fragment>
        <fragment
            android:id="@+id/twitchProfileFragment"
            android:name="com.android.multistream.ui.main.fragments.profile_fragment.twitch_profile.TwitchProfileFragment"
            android:label="TwitchProfileFragment">
            <argument
                android:name="channel"
                android:defaultValue="@null"
                app:argType="com.android.multistream.network.twitch.models.v5.followed_streams.Channel"
                app:nullable="true" />
        </fragment>
        <fragment
            android:id="@+id/mixerProfileFragment"
            android:name="com.android.multistream.ui.main.fragments.profile_fragment.mixer_profile.MixerProfileFragment"
            android:label="MixerProfileFragment">
            <argument
                android:name="mixerChannel"
                android:defaultValue="@null"
                app:argType="com.android.multistream.network.mixer.models.mixer_channels.MixerGameChannel"
                app:nullable="true" />
        </fragment>
    </navigation>
    <navigation
        android:id="@+id/intro"
        app:startDestination="@id/introPageTwo">
        <fragment
            android:id="@+id/introPageTwo"
            android:name="com.android.multistream.ui.intro.fragments.IntroPageTwo"
            android:label="IntroPageTwo">
            <action
                android:id="@+id/action_introPageTwo_to_loginFragment"
                app:destination="@id/loginFragment">
                <argument
                    android:name="platform"
                    android:defaultValue="0"
                    app:argType="integer" />
            </action>
        </fragment>
        <action
            android:id="@+id/action_intro_to_main"
            app:destination="@id/main"
            app:popUpTo="@id/introPageTwo"
            app:popUpToInclusive="true" />
        <fragment
            android:id="@+id/loginFragment"
            android:name="com.android.multistream.ui.auth.fragments.LoginFragment"
            android:label="LoginFragment">
            <argument
                android:name="platform"
                android:defaultValue="0"
                app:argType="integer" />
        </fragment>
    </navigation>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.android.multistream.ui.settings_fragment.SettingsFragment"
        android:label="SettingsFragment" />
</navigation>