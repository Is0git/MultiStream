<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorOnPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSecondaryVariant">@color/colorOnSecondaryVariant</item>
    </style>


    <style name="tabTextAppearance">
        <item name="android:textSize">0sp</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="defaultMaterialCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">25dp</item>
    </style>

    <style name="halfCurveShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSize">@dimen/defaultCardCornerRadius</item>
    </style>

    <style name="FollowButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="icon">@drawable/love_icon</item>
        <item name="iconTint">@color/colorAccent</item>
        <item name="iconPadding">0dp</item>
        <item name="backgroundTint">@color/colorOnSecondaryVariant</item>
        <item name="iconGravity">textStart</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

</resources>
