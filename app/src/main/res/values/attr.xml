<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StripeTabLayout">
        <attr name="showStripes" format="boolean" />
        <attr name="indicatorColor" format="color"/>
        <attr name="headerText" format="string"/>
    </declare-styleable>

   <declare-styleable name="HideScrollView">
       <attr name="topHideHeight" format="dimension"/>
       <attr name="bottomHideHeight" format="dimension"/>
   </declare-styleable>

    <declare-styleable name="StripedPanelText">
        <attr name="alignment">
            <flag name="none" value="0"/>
            <flag name="left" value="1"/>
            <flag name="right" value="2"/>
        </attr>
        <attr name="sideMargin" format="dimension"/>
        <attr name="titleText" format="string"/>
        <attr name="viewsMargin" format="dimension"/>
        <attr name="titleTextSize" format="dimension"/>
        <attr name="titleTextColor" format="color"/>
         </declare-styleable>
</resources>